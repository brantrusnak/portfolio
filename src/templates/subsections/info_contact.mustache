<div class="card">
    <h2 class="card-title">Contact</h2>
    <form>
        <label>
            Name
            <input type="text" placeholder="Your name..." name="name" autocomplete="off" required>
        </label>
        <label>
            Email
            <input type="email" placeholder="Your email..." name="email" autocomplete="off" required>
        </label>
        <label>
            Message
            <textarea placeholder="Your message..." name="message" rows="3" autocomplete="off" required></textarea>
        </label>
        <button type="submit">Submit</button>
    </form>
</div>